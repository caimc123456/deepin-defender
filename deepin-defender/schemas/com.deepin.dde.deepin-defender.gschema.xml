<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
        <schema path="/com/deepin/dde/deepin-defender/" id="com.deepin.dde.deepin-defender">
                <!-- USB自动检测配置项 -->
                <key name="auto-scan-usb" type="i">
                        <default>1</default>
                        <range min="0" max="1"></range>
                        <summary>Auto scan USB storage devices</summary>
                </key>
                <!-- 主界面关闭方式配置项 -->
                <key name="close-type" type="i">
                        <default>0</default>
                        <range min="0" max="1"></range>
                        <summary>ask close reminder</summary>
                </key>
                <!-- 主界面退出询问弹框配置项 -->
                <key name="ask-type" type="i">
                        <default>0</default>
                        <range min="0" max="1"></range>
                        <summary>ask close reminder</summary>
                </key>
                <!---联网管控总开关配置项-->
                <key name="net-control-on-off" type="i">
                        <default>0</default>
                        <summary>net control switch</summary>
                </key>
                <!---联网管控所有app状态配置项-->
                <key name="net-control-apps-status" type="s">
                        <default>''</default>
                        <summary>network protection network access option</summary>
                </key>
                <!---远程访问总开关配置项-->
                <key name="rem-control-on-off" type="i">
                        <default>0</default>
                        <summary>rem control switch</summary>
                </key>
                <!---远程登陆端口配置项-->
                <key name="rem-register-on-off" type="i">
                        <default>0</default>
                        <summary>rem register switch</summary>
                </key>
                <!---流量监控配置项-->
                <key name="data-usage-on-off" type="i">
                        <default>0</default>
                        <summary>data usage switch</summary>
                </key>
                <!---病毒查杀配置项-->
                <key type="s" name="last-scan-time">
                        <default>'-1'</default>
                        <summary>上次扫描时间</summary>
                        <description></description>
                        </key>
                <key type="s" name="current-version">
                        <default>'25.00.00.15'</default>
                        <summary>当前版本</summary>
                        <description></description>
                </key>
                <!---安装时间-->
                <key name="defender-install-time" type="s">
                        <default>'-1'</default>
                        <summary>安装时间</summary>
                </key>
                <!---usb存储设备保护配置项-->
                <key name="usb-storage-devices-type" type="i">
                        <default>0</default>
                        <summary>usb storage device type </summary>
                </key>
                <!---联网管控默认状态配置项-->
                <key name="net-control-default-status" type="i">
                        <default>0</default>
                        <summary>net control default status </summary>
                </key>
                <!---远程访问默认状态配置项-->
                <key name="rem-control-default-status" type="i">
                        <default>0</default>
                        <summary>rem control default status </summary>
                </key>
                <!-- 病毒引擎的设置 -->
                <key name="virus-engin-type" type="i">
                        <default>1</default>
                        <range min="0" max="1"></range>
                        <summary>病毒引擎类型</summary>
                </key>
                <!-- 上次体检得分 -->
                <key name="safety-score" type="i">
                        <default>-1</default>
                        <range min="-1" max="100"></range>
                        <summary>上次体检得分</summary>
                </key>
                <!-- 上次体检时间 -->
                <key name="last-check-time" type="s">
                        <default>"2020-11-03-16-11-30"</default>
                        <summary>上次体检时间</summary>
                </key>
                <!-- 首页是否忽略检查自启动项 -->
                <key name="ignore-auto-start-checking" type="b">
                        <default>false</default>
                        <summary>首页是否忽略检查自启动项</summary>
                </key>
                <!-- 首页是否忽略检查开发者模式项 -->
                <key name="ignore-dev-mode-checking" type="b">
                        <default>false</default>
                        <summary>首页是否忽略检查开发者模式项</summary>
                </key>
                <!-- 瑞星本地病毒版本 -->
                <key name="rising-local-version" type="s">
                        <default>'1479'</default>
                        <summary>瑞星本地病毒版本</summary>
                </key>
                <!-- 瑞星服务病毒版本 -->
                <key name="rising-server-version" type="s">
                        <default>'1479'</default>
                        <summary>瑞星服务病毒版本</summary>
                </key>
                <!-- 右键病毒扫描是否可见 -->
                <key name="right-virus-scan-visable" type="b">
                        <default>true</default>
                        <summary>右键病毒扫描是否可见</summary>
                </key>
                <!-- 服务器版右键病毒扫描是否可见 -->
                <key name="right-virus-scan-visable-for-srv-edition" type="b">
                        <default>false</default>
                        <summary>服务器版右键病毒扫描是否可见</summary>
                </key>
                <!-- 是否执行扫描大小设置 -->
                <key name="execute-scan-size" type="b">
                        <default>false</default>
                        <summary>是否执行扫描大小设置</summary>
                </key>
                <!-- 设置扫描文件大小 -->
                <key name="virus-scan-size" type="i">
                        <default>5120</default>
                        <range min="20" max="5120"></range>
                        <summary>设置扫描文件大小r</summary>
                </key>
                <!-- 记录显示的设置值 -->
                <key name="show-scan-size" type="i">
                        <default>20</default>
                        <range min="20" max="5120"></range>
                        <summary>记录显示的设置值</summary>
                </key>
                <key name="cleaner-last-time-cleaned" type="s">
                        <default>''</default>
                        <summary>上次垃圾清理内容大小</summary>
                </key>
                <!-- 是否使用自定义病毒升级地址 -->
                <key name="execute-vrius-update-address" type="b">
                        <default>false</default>
                        <summary>是否使用自定义病毒升级地址</summary>
                </key>
                <!-- 设置病毒升级地址 -->
                <key name="vrius-update-address" type="s">
                        <default>''</default>
                        <summary>设置病毒升级地址</summary>
                </key>
                <!-- 病毒引擎上一次类型 -->
                <key name="vrius-last-type" type="s">
                        <default>'1'</default>
                        <summary>上一次病毒引擎类型</summary>
                </key>
                <!--自定义地址是否改变 -->
                <key name="update-address-change" type="b">
                        <default>false</default>
                        <summary>自定义地址是否改变</summary>
                </key>
                <!-- 登录安全配置项 -->
                <key name="pwd-limit-level" type="i">
                        <default>1</default>
                        <range min="1" max="3"></range>
                        <summary>密码限制等级</summary>
                </key>
                <key name="pwd-change-deadline-type" type="i">
                        <default>6</default>
                        <range min="0" max="6"></range>
                        <summary>密码修改提醒截止时间类型</summary>
                </key>
                <!-- usb存储设备连接日志开关 -->
                <key name="usb-storage-conn-switch" type="b">
                        <default>true</default>
                        <summary>usb存储设备连接日志开关</summary>
                </key>
                <!-- usb存储设备管控模式 -->
                <key name="usb-storage-limit-mode" type="s">
                        <default>"0"</default>
                        <summary>usb存储设备管控模式</summary>
                </key>

        </schema>
</schemalist>
